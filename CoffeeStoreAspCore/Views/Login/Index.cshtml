
@{
    Layout = null;
}



<!DOCTYPE html>
<html lang="en">
<head>
    <title> Document  </title>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <link rel="stylesheet" href="~/Asset/Login/vendor/bootstrap.css">

    <link rel="stylesheet" href="~/Asset/Login/1.css">
</head>
<body>
    <header>
        <div class=" nenden navbar-inverse fixed-top">
            <div class="container-fluid">
                <div class="row">
                    <div class="col-md-10">
                        <nav class="navbar  ">
                            <a class="navbar-brand logo" asp-controller="home" asp-action="index">Home Coffee</a>
                            <ul class="nav navbar-nav">
                                <li class="nav-item active">
                                    <a class="nav-link" asp-controller="home" asp-action="index">Trang chủ <span class="sr-only">(current)</span></a>
                                </li>

                                <li class="nav-item">
                                    <a class="nav-link" href="#">Giới thiệu</a>
                                </li>
                                <li class="nav-item">
                                    <a class="nav-link" asp-controller="menu" asp-action="index">Menu</a>
                                </li>
                                <li class="nav-item">
                                    <a class="nav-link" href="#">Khuyến mãi</a>
                                </li>
                                <li class="nav-item">
                                    <a class="nav-link" href="#">Ưu đãi thành viên</a>
                                </li>

                                <li class="nav-item">
                                    <a class="nav-link" href="#">Cửa hàng - Liên hệ</a>
                                </li>
                            </ul>

                          



                        </nav>
                    </div>
                    <div class="col-md-2">
                        @if (ViewBag.b != null)
                        {

                            <div class="dropdown " id="show1" style="margin-top:9px">
                                <a class="btn btn-secondary dropdown-toggle" href="#" role="button" id="dropdownMenuLink" data-toggle="dropdown" aria-haspopup="false" aria-expanded="false">
                                    Login
                                </a>

                                <div class="dropdown-menu" aria-labelledby="dropdownMenuLink">

                                    <a class="dropdown-item" href="#"> @ViewBag.b </a>
                                    <a class="dropdown-item" asp-controller="login" asp-action="dangxuat">Logout</a>
                                </div>
                            </div>
                        }
                        else
                        {
                            <form>
                                <button class="btn btn-success-outline" asp-controller="login" asp-action="index" style="margin-top:9px;">
                                    Login
                                </button>
                            </form>
                        };








                    </div>

                </div>


            </div>

        </div>
    </header>

    <main>
        <div class="container">
            <div class="row  ">
                <div class="col-xs-3">

                </div>
                <div class="col-xs-6">
                    <form class="login" asp-controller="login" asp-action="index" method="post">
                        <h1>Đăng nhập</h1>
                        <div class="form-group">
                            <label for="">User name:</label>
                            <input type="text" class="form-control" id="email" name="username" value="@ViewBag.c">
                        </div>
                        <div class="form-group">
                            <label for="pwd">Password:</label>
                            <input type="password" class="form-control" id="pwd" name="pass">
                        </div>

                        <div class="form-group form-check">
                            <label class="form-check-label">
                                <input class="form-check-input" name="remember" checked type="checkbox"> Remember me
                            </label>
                        </div>
                        <button type="submit" asp-controller="login" asp-action="dangnhap" class="btn btn-primary">Đăng nhập</button>
                        <button asp-controller="home" asp-action="index" class="btn btn-secondary">Trở lại</button>
                        <hr>
                        <p> Nếu chứ có tài khoản hãy kích vào đây <a href="" class="float-right"> Đăng kí</a></p>
                    </form>

                </div>



            </div>
        </div>
    </main>
    <footer>
        <div class="nenden">
            <div class="container ">

                <div class="row footer1 ">
                    <div class="col-xs-2 ">
                        <img src="brand.png" alt="" class="img-thumbnail">
                    </div>
                    <div class="col-xs-3">
                        <h2>Địa chỉ:</h2>
                        <p> <i class=" fa fa-map-marker">  Kí túc xá khu B, Đông Hòa, Dĩ An, Bình Dướng</i></p>
                    </div>
                    <div class="col-xs-3">
                        <h2> Liên hệ:</h2>

                        <p>  <i class="fa fa-envelop"> Email: homecoffee@gmail.com</i></p>
                        <p> <i class=" fa fa-phone"> Phone: 0326837276</i></p>
                    </div>
                    <div class="col-xs-3 text-center">
                        <h2> Về chúng tôi:</h2>

                        <p>  Điều khoản và điều kiện</p>
                        <p> Chính sách bảo mật</p>
                    </div>

                </div>
                <hr>
                <div class="row footer2">
                    <div class="col-xs-3">

                    </div>
                    <div class="col-xs-6">
                        <h6> <small> &copy Copyright  2019 Home Coffee. All rights reserved.</small></h6>
                    </div>

                </div>
            </div>
        </div>
    </footer>





    <script type="text/javascript" src="~/Asset/Login/vendor/bootstrap.js"></script>

    <script type="text/javascript" src="~/Asset/Login/1.js"></script>
</body>
</html>

