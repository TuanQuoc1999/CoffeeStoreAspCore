@model IEnumerable<CoffeeStoreAspCore.ViewModels.Catalog.DrinkViewModel>;
@using CoffeeStoreAspCore.Data.Enums
@{
    Layout = null;

}

<!DOCTYPE html>

<html>
<head>
    <title> Document  </title>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <link rel="stylesheet" href="~/Asset/Menu/vendor/bootstrap.css">

    <link rel="stylesheet" href="~/Asset/Menu/vendor/font-awesome.css">
    <link rel="stylesheet" href="~/Asset/Menu/1.css">
    <link rel="stylesheet" href="~/Asset/trangchu/css/1.css">;
    <link href="https://fonts.googleapis.com/css?family=Oleo+Script:400,700&amp;display=swap" rel="stylesheet">
</head>
<script>

    $(document).ready(function () {
        $(window).scroll(function () {
            if ($(this).scrollTop() > 100) { //thực hiện lệnh điều kiện Khi lăn chuột xuống dưới hơn 100px
                $('#lendau').fadeIn(); //Xuất hiện nút
            } else {
                $('#lendau').fadeOut(); //Ngược lại thì ẩn nút
            }
        });
        $('#lendau').click(function () {
            $("html, body").animate({ scrollTop: 0 }, 600); //Animation giúp hoạt ảnh scroll ngược lên đầu trang sẽ mượt hơn
            return false;
        });
    });

</script>
<body>

    <header>
        <div class=" nenden navbar-inverse fixed-top">
            <div class="container-fluid">
                <div class="row">
                    <div class="col-md-10">
                        <nav class="navbar  ">
                            <a class="navbar-brand logo" asp-controller="home" asp-action="index">Home Coffee</a>
                            <ul class="nav navbar-nav">
                                <li class="nav-item active">
                                    <a class="nav-link" asp-controller="home" asp-action="index">Trang chủ <span class="sr-only">(current)</span></a>
                                </li>

                                <li class="nav-item">
                                    <a class="nav-link" href="#">Giới thiệu</a>
                                </li>
                                <li class="nav-item">
                                    <a class="nav-link" asp-controller="menu" asp-action="index">Menu</a>
                                </li>
                                <li class="nav-item">
                                    <a class="nav-link" href="#">Khuyến mãi</a>
                                </li>
                                <li class="nav-item">
                                    <a class="nav-link" href="#">Ưu đãi thành viên</a>
                                </li>

                                <li class="nav-item">
                                    <a class="nav-link" href="#">Cửa hàng - Liên hệ</a>
                                </li>
                            </ul>

                            <form class="form-inline navbar-form pull-right">
                                <input class="form-control" type="text" placeholder="Search">
                                <button class="btn btn-success-outline" type="submit"><i class="fa fa-search">	</i></button>

                            </form>



                        </nav>
                    </div>
                    <div class="col-md-2">
                        @if (ViewBag.b != null)
                        {

                            <div class="dropdown " id="show1" style="margin-top:9px">
                                <a class="btn btn-secondary dropdown-toggle" href="#" role="button" id="dropdownMenuLink" data-toggle="dropdown" aria-haspopup="false" aria-expanded="false">
                                    Login
                                </a>

                                <div class="dropdown-menu" aria-labelledby="dropdownMenuLink">

                                    <a class="dropdown-item" href="#"> @ViewBag.b </a>
                                    <a class="dropdown-item" asp-controller="login" asp-action="dangxuat">Logout</a>
                                </div>
                            </div>
                        }
                        else
                        {
                            <form>
                                <button class="btn btn-success-outline" asp-controller="login" asp-action="index" style="margin-top:9px;">
                                    Login
                                </button>
                            </form>
                        };








                    </div>

                </div>


            </div>

        </div>
    </header>





    <main>
        <div class="container">
            <div class="row">
                <div class="col-xs-3">
                    <div class="sidebar" id="catogory" style="position:fixed">
                        <h2> Món nổi bật</h2>
                        <ul>
                            <li>
                                <a href="#cafe"> Cà phê</a>
                            </li>
                            <li>
                                <a href="#tra">Trà và Macchiato</a>
                            </li>
                            <li>
                                <a href="#dasay"> Thức uống đá say</a>
                            </li>
                            <li>
                                <a href="#traicay">Thức uống trái cây</a>
                            </li>

                        </ul>
                    </div>
                </div>
                <div class="col-xs-6">

                    <div class="row" id="cafe">
                        <h2>
                            Cà phê
                        </h2>

                    </div>

                    <div class="row">
                        @foreach (var item in Model)
                        {
                            if (item.IdMenu == 4)
                            {
                                <div class="col-xs-4">
                                    <div class="card">
                                        <img class="card-img-top" src="https://localhost:5001/user-content/@item.DrinkImage.ImagePath" />
                                        <div class="card-block">
                                            <h4 class="card-title">@item.Name</h4>
                                            <p class="card-text">@item.UnitPrice </p>
                                            <a asp-controller="cart" asp-action="buy"  asp-route-id="@item.Id" class="btn btn-secondary nut" role="button">Mua ngay</a>
                                            

                                        </div>
                                    </div>
                                </div>
                            }

                        }


                    </div>


                    <hr>
                    <div class="row" id="tra">
                        <h2>
                            Trà và Machiato
                        </h2>
                    </div>
                    <div class="row">

                        @foreach (var item in Model)
                        {
                            if (item.IdMenu == 3)
                            {
                                <div class="col-xs-4">
                                    <div class="card">
                                        <img class="card-img-top" src="https://localhost:5001/user-content/@item.DrinkImage.ImagePath" />
                                        <div class="card-block">
                                            <h4 class="card-title">@item.Name</h4>
                                            <p class="card-text">@item.UnitPrice </p>
                                            <a asp-controller="cart" asp-action="buy" asp-route-id="@item.Id" class="btn btn-secondary nut" role="button">Mua ngay</a>

                                        </div>
                                    </div>
                                </div>
                            }

                        }


                    </div>
                    <hr>
                    <div class="row" id="dasay">
                        <h2>Thức uống đá say</h2>

                    </div>
                    <div class="row">
                        @foreach (var item in Model)
                        {
                            if (item.IdMenu == 2)
                            {
                                <div class="col-xs-4">
                                    <div class="card">
                                        <img class="card-img-top" src="https://localhost:5001/user-content/@item.DrinkImage.ImagePath" />
                                        <div class="card-block">
                                            <h4 class="card-title">@item.Name</h4>
                                            <p class="card-text">@item.UnitPrice </p>
                                            <a asp-controller="cart" asp-action="buy" asp-route-id="@item.Id" class="btn btn-secondary nut" role="button">Mua ngay</a>

                                        </div>
                                    </div>
                                </div>
                            }

                        }
                    </div>

                    <hr>
                    <div class="row" id="traicay">
                        <h2>Thức uống trái cây</h2>

                    </div>
                    <div class="row">
                        @foreach (var item in Model)
                        {
                            if (item.IdMenu == 1)
                            {
                                <div class="col-xs-4">
                                    <div class="card">
                                        <img class="card-img-top" src="https://localhost:5001/user-content/@item.DrinkImage.ImagePath" />
                                        <div class="card-block">
                                            <h4 class="card-title">@item.Name</h4>
                                            <p class="card-text">@item.UnitPrice </p>
                                            <a asp-controller="cart" asp-action="buy" asp-route-id="@item.Id" class="btn btn-secondary nut" role="button">Mua ngay</a>

                                        </div>
                                    </div>
                                </div>
                            }

                        }
                    </div>
                </div>
                    <div class="col-xs-3">
                        <form action="" id="giohang" style="position:fixed">
                            <a asp-controller="cart" asp-action="index" class="btn btn-success form-control">
                                Xem giỏ hàng
                            </a>
                            <hr>
                            <input type="text" class="form-control" id="maKM" placeholder="nhập mã khuyến mãi">
                            <a asp-controller="cart" asp-action="khuyenmai" asp-route-code="$('#maKM').val()" class="btn btn-warning"> Áp dụng</a>
                            <hr>

                        </form>
                    </div>
                </div>
        </div>

        <div class="container">
            <div class="row ">

                <div class="lendau" id="lendau">
                    <pre> <i class=" fa fa-angle-double-up "> Top </i> </pre>
                </div>
            </div>
        </div>
    </main>
    <footer>
        <div class="nenden">
            <div class="container ">

                <div class="row footer1 ">
                    <div class="col-xs-2 ">
                        <img src="brand.png" alt="" class="img-thumbnail">
                    </div>
                    <div class="col-xs-3">
                        <h2>Địa chỉ:</h2>
                        <p> <i class=" fa fa-map-marker">  Kí túc xá khu B, Đông Hòa, Dĩ An, Bình Dướng</i></p>
                    </div>
                    <div class="col-xs-3">
                        <h2> Liên hệ:</h2>

                        <p>  <i class="fa fa-envelop"> Email: homecoffee@gmail.com</i></p>
                        <p> <i class=" fa fa-phone"> Phone: 0326837276</i></p>
                    </div>
                    <div class="col-xs-3 text-center">
                        <h2> Về chúng tôi:</h2>

                        <p>  Điều khoản và điều kiện</p>
                        <p> Chính sách bảo mật</p>
                    </div>

                </div>
                <hr>
                <div class="row footer2">
                    <div class="col-xs-3">

                    </div>
                    <div class="col-xs-6">
                        <h6> <small>Copyright © 2019 Home Coffee. All rights reserved.</small></h6>
                    </div>

                </div>
            </div>
        </div>
    </footer>




    <script type="text/javascript" src="~/Asset/Menu/vendor/bootstrap.js"></script>

    <script type="text/javascript" src="~/Asset/trangchu/css/js.js"></script>
    <script type="text/javascript">
        $(document).ready(function () {
            $.get("https://localhost:5001/api/Drink/GetById/1", function (data) {
                var item = [];
                $.each(data, function (key, val) {
                    item.push("<li>" + val + "</li>");
                })
                $("#dasay").html(item.join(""));
            })
        })


    </script>
</body>
</html>
