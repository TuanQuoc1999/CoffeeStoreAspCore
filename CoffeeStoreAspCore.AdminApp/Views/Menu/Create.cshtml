@model CoffeeStoreAspCore.ViewModels.Menu.MenuCreateRequest

@{
   
    Layout = "~/Views/Shared/_Layout.cshtml";
}

    <div class="container-fluid">
        <div class="card mb-4 mt-4">
            <div class="card-header"><i class="fas fa-table mr-1"></i>Create Menu</div>
            <div class="card-body">
               

                <hr />
                <div class="row">
                    <div class="col-md-4">
                        <form method="post" asp-controller="Menu" asp-action="Create">
                            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                            <div class="form-group">
                                <label asp-for="Name" class="control-label"></label>
                                <input asp-for="Name" class="form-control" />
                                <span asp-validation-for="Name" class="text-danger"></span>
                            </div>
                            <div class="form-group">
                                <input type="submit" value="Create" class="btn btn-warning form-control"  />
                            </div>
                        </form>
                    </div>
                </div>

                <div>
                    <a class="btn btn-success" asp-action="Index"><i class="fas fa-reply"></i>  Back to List</a>
                </div>

</div>
</div>
</div>