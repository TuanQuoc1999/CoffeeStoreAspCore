@model CoffeeStoreAspCore.ViewModels.Menu.MenuUpdateRequest

@{
    ViewData["Title"] = "Edit";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<div class="container-fluid">
    <div class="card mb-4 mt-4">
        <div class="card-header"><i class="fas fa-table mr-1"></i>Edit Menu</div>
        <div class="card-body">

            <hr />
            <div class="row">
                <div class="col-md-4">
                    <form asp-action="Edit" method="post" asp-controller="Menu">
                        <div asp-validation-summary="ModelOnly" class="text-danger"></div>

                        <div class="form-group">
                            <label hidden asp-for="Id" class="control-label"></label>
                            <input hidden asp-for="Id" class="form-control" />
                            <span asp-validation-for="Id" class="text-danger"></span>
                        </div>
                        <div class="form-group">
                            <label asp-for="Name" class="control-label"></label>
                            <input asp-for="Name" class="form-control" />
                            <span asp-validation-for="Name" class="text-danger"></span>
                        </div>
                        <div class="form-group">
                            <input type="submit" value="Save" class="btn  btn-warning form-control" />
                        </div>
                    </form>
                </div>
            </div>

            <div>
                <a class="btn btn-success" asp-action="Index"><i class="fas fa-reply"></i>  Back to List</a>
            </div>

        </div>
    </div>
</div>
